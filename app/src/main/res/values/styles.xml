<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--Components-->

    <!--Bottom Sheets-->
    <style name="ThemeOverlay.MyTheme.BottomSheetDialog" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/Animation.MyTheme.BottomSheet.Modal</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="bottomSheetStyle">@style/Widget.MyTheme.BottomSheet.Modal</item>
        <item name="android:navigationBarColor">?attr/colorSurface</item>
    </style>

    <style name="Widget.MyTheme.BottomSheet.Modal" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="shapeAppearanceOverlay">?attr/shapeAppearanceLargeComponent</item>
    </style>

    <style name="PaddedLayoutChangePin">
        <item name="android:paddingRight">@dimen/default_pad_side</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingBottom">@dimen/default_pad_side</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="TextInputLayoutLogin">
        <item name="colorControlNormal">?attr/colorOnPrimarySurface</item>
        <item name="android:textColorHint">?attr/colorOnPrimarySurface</item>
        <item name="colorControlActivated">?attr/colorOnPrimarySurface</item>
        <item name="colorControlHighlight">?attr/colorOnPrimarySurface</item>
    </style>

    <!-- RatingBar -->
    <style name="RatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingbar_full</item>
        <item name="android:indeterminateDrawable">@drawable/ratingbar_full</item>
        <!--        <item name="android:minHeight">40dip</item>-->
        <!--        <item name="android:maxHeight">40dip</item>-->
    </style>
    <style name="font">
        @import url(\\\'https://fonts.googleapis.com/css2?family=Rubik:wght@300&amp;display=swap');
    </style>
</resources>