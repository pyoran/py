<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:id="@+id/scroll_finalize_second"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@id/btn_finalize_second"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar_finalize_second"
                    style="@style/ThemeOverlay.AppCompat.Light"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:navigationIcon="@drawable/ic_back" />

                <TextView
                    android:id="@+id/tv_step_finalize_second"
                    style="@style/TextAppearance.MdcTypographyStyles.Headline6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/margin_20"
                    android:layout_marginTop="@dimen/margin_36"
                    android:text="@string/_1_3"
                    android:textColor="@color/black30"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/toolbar_finalize_second" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_title_finalize_second"
                    style="@style/TextAppearance.MdcTypographyStyles.Headline5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/margin_20"
                    android:layout_marginTop="@dimen/margin_8"
                    android:text="@string/rekening_autodebet"
                    android:textColor="@color/black80"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_step_finalize_second" />

                <TextView
                    android:id="@+id/tv_desc_finalize_second"
                    style="@style/TextAppearance.MdcTypographyStyles.Body2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/margin_20"
                    android:layout_marginTop="@dimen/margin_8"
                    android:text="@string/desc_finalize_second"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_title_finalize_second" />

                <ImageView
                    android:id="@+id/iv_card_finalize_second"
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:layout_marginHorizontal="@dimen/margin_20"
                    android:layout_marginTop="@dimen/margin_20"
                    android:layout_marginBottom="@dimen/margin_40"
                    android:background="@drawable/bg_rounded"
                    android:backgroundTint="@color/black20"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"

                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_desc_finalize_second" />

                <ImageView
                    android:id="@+id/iv_logo_finalize_second"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_20"
                    android:layout_marginTop="@dimen/margin_20"
                    android:src="@drawable/ic_logo_bri"
                    app:layout_constraintStart_toStartOf="@id/iv_card_finalize_second"
                    app:layout_constraintTop_toTopOf="@id/iv_card_finalize_second" />

                <TextView
                    android:id="@+id/tv_account_finalize_second"
                    style="@style/TextAppearance.MdcTypographyStyles.Caption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_20"
                    android:layout_marginTop="@dimen/margin_20"
                    android:text="@string/no_rekening"
                    android:textColor="@color/black80"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="@id/iv_card_finalize_second"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintStart_toStartOf="@id/iv_card_finalize_second"
                    app:layout_constraintTop_toBottomOf="@id/iv_logo_finalize_second" />

                <TextView
                    android:id="@+id/tv_number_finalize_second"
                    style="@style/TextAppearance.MdcTypographyStyles.Body2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/margin_20"
                    android:text="@string/account_number"
                    android:textAlignment="textEnd"
                    android:textColor="@color/black80"
                    app:layout_constraintBottom_toBottomOf="@id/tv_account_finalize_second"
                    app:layout_constraintEnd_toEndOf="@id/iv_card_finalize_second"
                    app:layout_constraintStart_toEndOf="@id/tv_account_finalize_second"
                    app:layout_constraintTop_toTopOf="@id/tv_account_finalize_second" />

                <TextView
                    android:id="@+id/tv_an_finalize_second"
                    style="@style/TextAppearance.MdcTypographyStyles.Caption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_20"
                    android:layout_marginTop="@dimen/margin_20"
                    android:text="@string/atas_nama"
                    android:textColor="@color/black80"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="@id/iv_card_finalize_second"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintStart_toStartOf="@id/iv_card_finalize_second"
                    app:layout_constraintTop_toBottomOf="@id/tv_account_finalize_second" />

                <TextView
                    android:id="@+id/tv_name_finalize_second"
                    style="@style/TextAppearance.MdcTypographyStyles.Body2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/margin_20"
                    android:text="@string/rama_kumbara"
                    android:textAlignment="textEnd"
                    android:textColor="@color/black80"
                    app:layout_constraintBottom_toBottomOf="@id/tv_an_finalize_second"
                    app:layout_constraintEnd_toEndOf="@id/iv_card_finalize_second"
                    app:layout_constraintStart_toEndOf="@id/tv_an_finalize_second"
                    app:layout_constraintTop_toTopOf="@id/tv_an_finalize_second" />

                <TextView
                    android:id="@+id/tv_autodebet_finalize_second"
                    style="@style/TextAppearance.MdcTypographyStyles.Caption"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/margin_20"
                    android:text="@string/autodebet_finalize_second"
                    android:textAllCaps="false"
                    app:layout_constraintBottom_toBottomOf="@id/iv_card_finalize_second"
                    app:layout_constraintEnd_toEndOf="@id/iv_card_finalize_second"
                    app:layout_constraintStart_toStartOf="@id/iv_card_finalize_second"
                    app:layout_constraintTop_toBottomOf="@id/tv_an_finalize_second" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>

        <Button
            android:id="@+id/btn_finalize_second"
            style="@style/TextAppearance.MdcTypographyStyles.Subtitle1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_btn_primary_full"
            android:padding="@dimen/margin_12"
            android:text="@string/siap_lanjut"
            android:textAllCaps="false"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>

